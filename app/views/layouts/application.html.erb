<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="slidemenu">
      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if user_signed_in? %>
          <li class="">
            <%= link_to 'Home', user_path(current_user.id)#マイページ %>
          </li>
          <li class="">
            <%= link_to 'Users', users_path #登録ユーザー一覧%>
          </li>
          <li class="">
            <%= link_to 'Books', books_path #本投稿一覧%>
          </li>
          <li class="">
            <%= link_to 'logout',　destroy_user_session_path, method: :delete #ログアウト%>
          </li>
        <% else %>
          <li class="">
            <%= link_to "Home", user_path(current_user.id) #マイページ%>
          </li>
          <li class="">
            <%= link_to "About", about_path %>
          </li>
          <li class="">
            <%= link_to "sign up", new_user_password_path %>
          </li>
          <li class="">
            <%= link_to "login", new_user_session_path %>
          </li>
        <% end %>
     </ul>
    </div>
    <%= yield %>
  </body>
</html>
    <%= yield %>
    <footer>
      <a>CopyRight Infratop.inc</a>
    </footer>
</html>
