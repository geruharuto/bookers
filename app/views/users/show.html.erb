<div class = "body" style>
	<div class = "container">
		<div class = "row" style>
			<div class = "col-xs-3">
				<%= render "users/leftpage", user: @user %>
				<%= render "books/leftbottom", book: @book %>
			</div>
			<div class = "col-xs-9" style >
				<h2>Books</h2>
					<table class = "table table-hover table-inverse">
						<thead>
							<tr>
								<th></th>
								<th>Title</th>
						   		<th>Opinion</th>
						   		<th colspan="3"></th>
						   	</tr>
						</thead> 
                        <tbody>
					   	<% @books.each do |book| %>
						<tr>
							<td><%= link_to user_path do %>
									 <%= attachment_image_tag @user, :profile_image, size: "50x50", fallback: "no_image.jpg"%>
								<% end %>
							</td>
							<td style><%= link_to book.title, book_path(@user) %></td>
							<td style><%= book.body %></td>
					   	</tr>
						<% end %>
						</tbody>
					</table>
			</div>
		</div>
	</div>
</div>