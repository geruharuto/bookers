<h1>Books</h1>
<table class = "clearfix">
	<div class = "underbar">
		<tr>
			<th class = "null"></th>
			<th class = "title">Title</th>
	   		<th class = "opinion">Opinion</th>
	   	</tr>
	</div>
   	<% @books.each do |book| %>
	<tr class = "box clearfix">
		<td><%= link_to profile_image_id show_path %></td>
		<td><%= link_to book.title, edit_user  %></td>
	 	<td><%= book.body %></td>
   	</tr>
	<% end %>
</table>

<%= render "users/leftpage", user: @user %>
<%= render "users/leftbottom", book: @book %>

