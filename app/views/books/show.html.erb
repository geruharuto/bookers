<div class = "body" style>
	<div class = "container">
		<div class = "row" style>
			<div class = "col-xs-3">
				<%= render "users/leftpage", user: @user %>
				<%= render "books/leftbottom", book: @book %>
			</div>
			<div class = "col-xs-9" style >
				<h1>Book detail</h1>
				<table class = "table">
					<tbody>
						<tr>
							<td>
								<%= link_to user_path(@books.user_id) do %>
									<%= attachment_image_tag @user, :profile_image, size: "50x50", fallback: "no_image.jpg"%>
								 	<div class = "user_name">
								 		<%= @user.name %>
									</div>
								  <% end %>
							</td>
							<td style><%= @books.title %></td>
							<td style><%= @books.body %></td>
							<% if current_user.id == @books.user_id %>
							 	<td>
							 		<div class = "btn-sm btn-success center">
							 			<%= link_to "Edit", edit_book_path %>
							 		</div>
							 	</td>
							 	<td>
							 		<div class = "btn-sm btn-danger center">
							 			<%= link_to "Destroy", book_path, method: :delete %>
							 		</div>
							 	</td>
							<% end %>
				   		</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
