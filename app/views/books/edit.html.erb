<div class = "body" style>
	<div class = "container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
				<form class="edit_book">
					<%= form_for(@book) do |f| %>
					<div class="field row">
						<label for="book_title">Title</label>
						<div class="col-xs-12 book_title">
							<%= f.text_field :title %>
						</div>
					</div>
					<div class="field row">
						<label for="book_opinion">Opinion</label>
						<div class="col-xs-12 book_body">
							<%= f.text_area :body %>
						</div>
					</div>
					<div class="actions row">
						<div btn btn-primary col-xs-12>
						<%= f.submit "Update Book" %>
					</div>
					</div>
					<% end %>
			</div>

<%= link_to "show", book_path %>
<%= link_to "back", books_path %>

