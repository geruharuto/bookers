<div class = "body" style>
	<div class = "container">
		<% if @book.errors.any? %>
		 <ul>
		      <% @book.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		         <li>error</li>
		<% end %>
		 </ul>
	</div>
		<% end %>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
					<%= form_for(@book) do |f| %>
					<div class="field row">
						<label for="book_title">Title</label>
						<div class="col-xs-12 book_title">
							<%= f.text_field :title %>
						</div>
					</div>
					<div class="field row">
						<label for="book_opinion">Opinion</label>
						<div class="col-xs-12 book_body">
							<%= f.text_area :body %>
						</div>
					</div>
					<div class="actions row">
						<div btn btn-primary col-xs-12>
							<%= f.submit "Update Book" %>
						</div>
					</div>
					<% end %>
			</div>
		</div>
	</div>




<%= link_to "Show", book_path %>
<%= link_to "Back", books_path %>

